{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "checkJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}